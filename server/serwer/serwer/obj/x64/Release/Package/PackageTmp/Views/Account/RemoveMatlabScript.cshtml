@model  serwer.Models.MatlabViewModel
@{
    ViewBag.Title = "RemoveMatlabScript";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Usuwanie skryptu Matlaba: <b>@Model.ScriptName</b></h2>

<center>
    <br />
    <h3 class="text-danger">
        Wpisz nazwę skryptu, aby potwierdzić jego usunięcie: <b>@Model.ScriptName</b><br />
        Ta operacja jest nieodwracalna.
    </h3>
    @using (Html.BeginForm("RemoveMatlabScript", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.ScriptName)

        <div class="text-danger">
            @ViewBag.WrongScriptName
        </div>        

        <div class="form-group">
            @Html.LabelFor(m => m.ScriptNameForRemoval, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ScriptNameForRemoval, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-danger" style="margin-bottom: 1em;" value="Rozumiem, usuń skrypt" />
                @*<input type="submit" class="btn btn-success" value="Powrót" />*@
                @Html.ActionLink("Powrót", "MatlabScriptsList", "Account", null, new { @class = "btn btn-success", @Style = "margin-bottom: 1em;" })
            </div>
        </div>

    }
</center>