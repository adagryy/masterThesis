@using serwer.Models
@model UploadFileViewModel
@{
    ViewBag.Title = "Załaduj obraz";
}

<h2>Załaduj obraz</h2>

@using (Html.BeginForm("UploadFile", "Images", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div>        

        <div class="form-group">
            @Html.Label("Algorytm obróbki", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*<div class="dropdown">
                    <button class="btn btn dropdown-toggle" type="button" data-toggle="dropdown">
                        <i>Wybierz algorytm</i> 
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        @{
                            foreach (var item in Model.algorithms)
                            {
                                <li><a href="#">@item</a></li>
                            }
                        }                        
                    </ul>
                </div>*@
                @Html.DropDownListFor(d => d.selectedAlgorithm, new SelectList(Model.algorithms.Items, "Value", "Text", Model.algorithms.SelectedValue), new { @class = "btn btn-default" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Plik", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("file", "", new { @type = "file", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Prześlij na serwer" class="btn btn-primary" />
            </div>
        </div>
        @{
            if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <p>@ViewBag.Message</p>
                </div>
            }
        }      

    </div>

}

