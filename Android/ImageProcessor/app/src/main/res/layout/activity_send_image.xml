<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grycz.imageprocessor.SendImageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_sending"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Wykonaj zdjęcie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_sending" />

    <Button
        android:id="@+id/choose_photo"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Wybierz zdjęcie"
        app:layout_constraintStart_toEndOf="@+id/take_photo"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_sending" />

    <Button
        android:id="@+id/send_photo"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:text="Wyślij"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_sending" />

    <!--<ImageView-->
    <!--android:id="@+id/photo_preview"-->
    <!--android:layout_width="319dp"-->
    <!--android:layout_height="69dp"-->
    <!--android:layout_marginStart="20dp"-->
    <!--android:layout_marginTop="28dp"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/send_photo"-->
    <!--app:srcCompat="@drawable/ic_launcher_foreground" />-->
    <Spinner
        android:id="@+id/spinner_algorithms"
        android:layout_width="182dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/send_photo"
        app:layout_constraintTop_toBottomOf="@+id/choose_photo" />

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropping"
        android:layout_width="317dp"
        android:layout_height="272dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_photo" />

    <Button
        android:id="@+id/left_rot"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="-1 st"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_photo" />

    <Button
        android:id="@+id/right_rot"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="+1 st"
        app:layout_constraintStart_toEndOf="@+id/left_rot"
        app:layout_constraintTop_toBottomOf="@+id/send_photo" />

    <Button
        android:id="@+id/crop_button"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Kadruj"
        app:layout_constraintStart_toEndOf="@+id/right_rot"
        app:layout_constraintTop_toBottomOf="@+id/send_photo" />

    <Button
        android:id="@+id/reset_image"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="Reset"
        app:layout_constraintStart_toEndOf="@+id/crop_button"
        app:layout_constraintTop_toBottomOf="@+id/send_photo" />


</android.support.constraint.ConstraintLayout>
