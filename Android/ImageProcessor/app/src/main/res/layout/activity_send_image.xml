<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grycz.imageprocessor.SendImageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_sending"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!--<ImageView-->
    <!--android:id="@+id/photo_preview"-->
    <!--android:layout_width="319dp"-->
    <!--android:layout_height="69dp"-->
    <!--android:layout_marginStart="20dp"-->
    <!--android:layout_marginTop="28dp"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/send_photo"-->
    <!--app:srcCompat="@drawable/ic_launcher_foreground" />-->
    <Spinner
        android:id="@+id/spinner_algorithms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_sending" />

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropping"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        app:cropInitialCropWindowPaddingRatio="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_algorithms" />

    <Button
        android:id="@+id/left_rot"
        android:layout_width="67dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="-1 st"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_algorithms" />

    <Button
        android:id="@+id/right_rot"
        android:layout_width="67dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="+1 st"
        app:layout_constraintStart_toEndOf="@+id/left_rot"
        app:layout_constraintTop_toBottomOf="@+id/spinner_algorithms" />


</android.support.constraint.ConstraintLayout>
